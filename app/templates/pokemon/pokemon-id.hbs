<div class="epd-l-pokemon__intro">
  <h1 class="epd-l-pokemon__introName">
    #{{model.base.id}}: {{ model.base.name }}
  </h1>

  <div class="epd-l-pokemon__introSprites">
    <img src="{{model.base.sprites.front_default}}" alt="Front sprite for {{ model.base.name }}">

    {{#if model.base.sprites.front_shiny}}
      <img src="{{model.base.sprites.front_shiny}}" alt="Front shiny sprite for {{ model.base.name }}">
    {{/if}}
  </div>
</div>

<div class="epd-l-pokemon__basics">
  <div class="epd-l-pokemon__basicTypes">
    {{#each model.base.types as |type|}}
      {{#link-to "type.type-id" type.type.name}}
        {{image-chip
          chipText=type.type.name
          color=type.type.name
        }}
      {{/link-to}}
    {{/each}}
  </div>

  <div class="epd-l-pokemon__basicColors">
    {{#link-to "pokemon_color.pokemon_color_id" model.species.color.name}}
      {{color-chip
        chipText=model.species.color.name
        color=model.species.color.name
      }}
    {{/link-to}}
  </div>

  <div class="epd-l-pokemon__basicAbilities">
    <ul>
      {{#each model.base.abilities as |ability| }}
        {{#link-to "ability.ability_id" ability.ability.name}}
          <li>
            {{ ability.ability.name }}{{#if ability.is_hidden}} (Hidden Ability){{/if}}
          </li>
        {{/link-to}}
      {{/each}}
    </ul>
  </div>

  <div class="epd-l-pokemon__basicShape">
    {{#link-to 'pokemon_shape.pokemon_shape_id' model.species.shape.name}}
      {{image-chip
        chipText=model.species.shape.name
        color='shape'
      }}
    {{/link-to}}
  </div>
</div>

<div class="epd-l-pokemon__tabs">
  {{#link-to "pokemon.pokemon-id.evolution" model.base.id class="epd-l-pokemon__tabLink"}}
    {{#paper-button primary=true class="epd-l-pokemon__tabButton" raised=true}}
      Evolution
    {{/paper-button}}
  {{/link-to}}

  {{#link-to "pokemon.pokemon-id.moves" model.base.id class="epd-l-pokemon__tabLink"}}
    {{#paper-button primary=true class="epd-l-pokemon__tabButton" raised=true}}
      Moves
    {{/paper-button}}
  {{/link-to}}

  {{#link-to "pokemon.pokemon-id.pokedex" model.base.id class="epd-l-pokemon__tabLink"}}
    {{#paper-button primary=true class="epd-l-pokemon__tabButton" raised=true}}
      Pokedex
    {{/paper-button}}
  {{/link-to}}

  {{#link-to "pokemon.pokemon-id.stats" model.base.id class="epd-l-pokemon__tabLink"}}
    {{#paper-button primary=true class="epd-l-pokemon__tabButton" raised=true}}
      Stats
    {{/paper-button}}
  {{/link-to}}

  {{#link-to "pokemon.pokemon-id.tms" model.base.id class="epd-l-pokemon__tabLink"}}
    {{#paper-button primary=true class="epd-l-pokemon__tabButton" raised=true}}
      TMs
    {{/paper-button}}
  {{/link-to}}
</div>

<div class="epd-l-pokemon__tabWindow">
  {{ outlet }}
</div>

{{#paper-list class="epd-l-pokemon__footer"}}
  {{#link-to "pokemon.pokemon-id" model.base.prev_id}}
    {{#paper-item class="md-2-line"}}
      <img src={{sprite model.base.prev_id}} class="md-avatar">
      <div class="md-list-item-text">
        <h3>Previous Pokemon</h3>
      </div>
    {{/paper-item}}
  {{/link-to}}

  {{#link-to "pokemon.pokemon-id" model.base.next_id}}
    {{#paper-item class="md-2-line"}}
      <img src={{sprite model.base.next_id}} class="md-avatar">
      <div class="md-list-item-text">
        <h3>Next Pokemon</h3>
      </div>
    {{/paper-item}}
  {{/link-to}}
{{/paper-list}}