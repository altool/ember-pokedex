
{{#each model.effect_entries as |entry|}}
  <p>
    {{ entry.short_effect }}
  </p>

  <p>
    {{ entry.effect }}
  </p>
{{/each}}

<div class="flex-100">
  {{#paper-list class="list-flex-layout__container"}}
    {{#paper-subheader}}
      <h2>
        {{model.name}}
      </h2>
    {{/paper-subheader}}
    {{#each model.pokemon as |pokemon|}}
      {{#link-to 'pokemon.pokemon_id' pokemon.pokemon.name class="list-flex-layout__item"}}
        {{#paper-item class="md-2-line"}}
          <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{pokemon_id pokemon.pokemon.url}}.png" alt="" class="md-avatar">
          <div class="md-list-item-text">
            <h3>{{pokemon.pokemon.name}}</h3>
          </div>
        {{/paper-item}}  
      {{/link-to}}
    {{/each}}
  {{/paper-list}}
</div>